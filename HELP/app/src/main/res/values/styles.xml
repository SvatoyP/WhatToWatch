<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextFieldCaption">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/colorInputLabel</item>
    </style>

    <style name="TextField">
        <item name="android:background">@drawable/bg_text_input</item>
        <item name="android:textColorHint">@color/colorTextInputBorder</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
        <item name="paddingStart">20dp</item>
        <item name="paddingEnd">19dp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">textStart</item>
    </style>

    <style name="PrimaryButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="AdditionalAction">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorInputLabel</item>
    </style>

    <style name="BalanceButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_balance_button</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="BottomBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundColor">@color/colorTextInputBg</item>
        <item name="iconSize">24dp</item>
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="indicatorRadius">2dp</item>
        <item name="sideMargins">20dp</item>
        <item name="itemPadding">4dp</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="iconTintActive">#55FFCC</item>
        <item name="borderRound">6dp</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <style name="MainButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_main_button</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="lineHeight">16sp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="ButtonDownloadDocument">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_download_document</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="lineHeight">16sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:drawableRight">@drawable/ic_down_arrow_pink</item>
        <item name="android:drawableLeft">@drawable/ic_pdf</item>
    </style>
</resources>